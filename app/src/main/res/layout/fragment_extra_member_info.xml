<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.fragments.ExtraMemberInfoFragment">

    <TextView
        android:id="@+id/name_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/name_text"
        android:layout_gravity="center"
        android:layout_marginTop="25dp" />

    <TextView
        android:id="@+id/party_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/party_text"
        android:layout_gravity="center"
        android:layout_marginTop="25dp" />
    <TextView
        android:id="@+id/born_year_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/born_year_text"
        android:layout_gravity="center"
        android:layout_marginTop="25dp" />
    <TextView
        android:id="@+id/constituency_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/constituency_text"
        android:layout_gravity="center"
        android:layout_marginTop="25dp" />
    <TextView
        android:id="@+id/twitter_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/party_text"
        android:layout_gravity="center"
        android:layout_marginTop="25dp" />
</LinearLayout>